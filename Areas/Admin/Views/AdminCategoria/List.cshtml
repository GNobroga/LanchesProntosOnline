@model IEnumerable<Categoria>

<div class="container mt-4 d-flex flex-column gap-3">
    <h1>Categorias</h1>
  
    <a class="d-flex gap-2 btn btn-dark align-self-start" asp-action="Create">
        <i class="bi bi-file-earmark-plus-fill"></i>
        Adicionar Nova
    </a>

    @if (Model.Count() == 0) 
    {
        <p class="text-center">Não há nenhuma categoria disponível</p>
    }
    else 
    {
        <table class="table">
            <thead>
                 <tr>
                     <th>Código</th>
                     <th>Nome</th>
                     <th>Descrição</th>
                     <th>Actions</th>
                 </tr>
            </thead>
           <tbody>
          
                 @foreach (var categoria in Model) 
                 {
                     <tr>
                         <td>@categoria.CategoriaId</td>
                         <td>@categoria.CategoriaNome</td>
                         <td>@categoria.CategoriaDescricao</td>
                         <td>
                             <div class="d-flex gap-3">
                                 <a asp-action="Edit" class="btn btn-secondary" asp-route-id="@categoria.CategoriaId">Editar</a> 
                                 <a asp-action="Delete" class="btn btn-danger" asp-route-id="@categoria.CategoriaId">Excluir</a>
                             </div>
                         </td>
                     </tr>
                 }
           
           </tbody>
         </table>
    }

    
</div>